# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

alias hiapp='cd projects/hireology/app'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias svn-diff='git-svn-diff'

# rails
alias sc='script/console'
alias rs='rails s'
alias ssdc='script/server -e development_cached'
alias sg='script/generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='script/generate nifty_scaffold'
alias migrate='bundle exec rake db:migrate'
alias rst='touch tmp/restart.txt'
alias be='bundle exec'


#rspec
alias fspec='bundle exec rspec spec_no_rails'
alias rspec='bundle exec rspec spec'
alias cukes='make run-cukes'

# commands starting with % for pasting from web
alias %=' '


#
# Custom aliases
#

alias m.='mate .'
alias m='mate'
alias rmq='rabbitmq-server'
